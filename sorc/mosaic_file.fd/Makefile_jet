SHELL := bash

MAKEFLAGS += --warn-undefined-variables

INC  = -I${NETCDF}/include

LIBS = ${NETCDF}/lib/libnetcdff.a ${NETCDF}/lib/libnetcdf.a \
       ${HDF5}/lib/libhdf5_hl.a ${HDF5}/lib/libhdf5.a /apps/szip/2.1/lib/libsz.a -lz

FC = ifort
FFLAGS = -g -O2 $(INC)

EXEC = mosaic_file

.PHONY: all
all : $(EXEC)

$(EXEC): mosaic_file.o $(LIBS)
	$(FC) $(FFLAGS) -o $@ $^

.SUFFIXES:
.SUFFIXES: .f90 .o

.f90.o:
	$(FC) $(FFLAGS) -c $<

.PHONY: clean
clean:
	rm -f *.o *.mod $(EXEC)
